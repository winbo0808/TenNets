<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tv_my_coupons_item_value1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:gravity="center"
        android:text="优惠券图片"
        android:textColor="@color/dark_grey_text"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_my_coupons_item_value2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="5元"
        android:textColor="@color/dark_grey_text"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_my_coupons_item_value3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:gravity="center"
        android:padding="10dp"
        android:text="2015.06.21.05.22"
        android:textColor="@color/dark_grey_text"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_my_coupons_item_value4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:gravity="center"
        android:text="苏果店铺"
        android:textColor="@color/dark_grey_text"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_my_coupons_item_value5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/common_purple_bg"
            android:gravity="center"
            android:padding="2dp"
            android:text="开始使用"
            android:textColor="@color/white_text"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>