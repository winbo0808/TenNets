<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_grey_bg_selector"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tv_my_orders_item_value1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1号订单"
        android:textColor="@color/black_text"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_my_orders_item_value2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="2.5dp"
        android:text="2015.06.05.22"
        android:textColor="@color/black_text"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_my_orders_item_value3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="2.5dp"
        android:text="未确认订单"
        android:textColor="@color/black_text"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_my_orders_item_value4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="2.5dp"
        android:text="立即支付"
        android:textColor="@color/dark_grey_text"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_my_orders_item_value5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            android:background="@drawable/icon_red_bg"
            android:gravity="center"
            android:padding="2.5dp"
            android:text="展开详情"
            android:textColor="@color/white_text"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>